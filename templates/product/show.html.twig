{% extends 'basepage.html.twig' %}

{% block titre %}Fiche du produit
	{{ produit.name}}
{% endblock %}

{% block corps %}
	<table class="table table-striped table-inverse">
		<th>
			Propriété
		</th>
		<th>
			Valeur
		</th>


		<tr>
			<td>Name
			</td>
			<td>{{ produit.name}}</td>

		</tr>
		<tr>
			<td>Prix :
			</td>
			<td>{{ produit.price}}</td>

		</tr>
		<tr>

			<td>Description :
			</td>
			<td>{{ produit.description}}</td>
		</tr>
		<tr>

			<td>Catègorie :
			</td>
			<td>{{ produit.category.name}}</td>
		</tr>
		<tr>

			<td>Fournisseurs
			</td>
			<td>
				{% for f in produit.fournisseurs %}
					{{ f.name}}
					/
					{% else %}

				{% endfor %}
			</td>
		</tr>
	</table>
{% endblock %}
